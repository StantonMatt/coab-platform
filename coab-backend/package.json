{
  "name": "coab-backend",
  "version": "1.0.0",
  "description": "COAB Platform Backend API - Fastify + Prisma + TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "generate": "prisma generate",
    "create-admin": "tsx scripts/create-admin.ts"
  },
  "keywords": [
    "coab",
    "fastify",
    "prisma",
    "api"
  ],
  "author": "COAB",
  "license": "UNLICENSED",
  "dependencies": {
    "@coab/utils": "*",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.2.1",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.1.0",
    "@sentry/node": "^8.42.0",
    "argon2": "^0.41.1",
    "dotenv": "^16.6.1",
    "fastify": "^5.1.0",
    "jose": "^5.9.6",
    "libphonenumber-js": "^1.11.15",
    "mercadopago": "^2.11.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
